{
  "private": true,
  "name": "lukerucker.com",
  "description": "My slice of the internet",
  "license": "MIT",
  "main": "dist/worker.js",
  "scripts": {
    "build": "npm run build:prod:css && remix build && npm run build:worker",
    "build:css": "postcss styles --base styles --dir app/styles",
    "build:prod:css": "npm run build:css -- --env production",
    "build:worker": "esbuild --define:process.env.NODE_ENV='\"production\"' --minify --bundle --sourcemap --outdir=dist ./worker",
    "build:dev:worker": "esbuild --define:process.env.NODE_ENV='\"development\"' --bundle --sourcemap --outdir=dist ./worker",
    "deploy:staging": "wrangler publish --env staging",
    "deploy:production": "wrangler publish --env production",
    "dev": "concurrently npm:dev:*",
    "dev:css": "npm run build:css -- -w",
    "dev:remix": "remix watch",
    "dev:worker": "miniflare --build-command \"npm run build:dev:worker\" --watch --kv SITE",
    "format": "prettier --write \"**/*.{js,jsx,json,md,ts,tsx}\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "postinstall": "remix setup cloudflare-workers",
    "prepare": "husky install"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.5",
    "@react-aria/ssr": "^3.1.0",
    "@react-aria/utils": "^3.11.0",
    "@remix-run/cloudflare-workers": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "clsx": "^1.1.1",
    "date-fns": "^2.28.0",
    "just-kebab-case": "^4.0.1",
    "marked": "^4.0.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1",
    "remix-utils": "^2.3.0",
    "sanitize-html": "^2.6.1",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@cloudflare/wrangler": "^1.19.6",
    "@remix-run/dev": "^1.1.1",
    "@tailwindcss/typography": "^0.5.0",
    "@types/marked": "^4.0.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/sanitize-html": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^7.0.0",
    "cssnano": "^5.0.14",
    "daisyui": "^2.2.0",
    "esbuild": "0.13.14",
    "eslint": "^8.5.0",
    "eslint-config-airbnb": "^19.0.2",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "miniflare": "^2.0.0-next.3",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.7",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
